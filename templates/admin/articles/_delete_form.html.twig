<form method="post" action="{{ path('app_articles_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulez-vous supprimer l'article');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button class="p-4 bg-red-500 rounded-2xl text-white hover:bg-red-800">Supprimer l'article</button>
</form>
