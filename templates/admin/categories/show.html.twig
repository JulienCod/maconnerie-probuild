{% extends 'admin/adminBase.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_categories_index') }}">Retour à la liste des catégories</a>

    <a href="{{ path('admin_categories_edit', {'id': category.id}) }}">Modifier la catégorie</a>

    {{ include('admin/categories/_delete_form.html.twig') }}
{% endblock %}
