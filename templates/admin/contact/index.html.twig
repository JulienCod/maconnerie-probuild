{% extends 'admin/adminBase.html.twig' %}

{% block title %}Gestion des contacts
{% endblock %}

{% block body %}
	<h1>Gestion des contacts</h1>
	{% if contacts %}
		<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
			<table class="w-full text-sm text-left text-gray-500 ">
				<thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
					<tr>
						<th scope="col" class="px-6 py-3">
							identifiant
						</th>
						<th scope="col" class="px-6 py-3">
							Nom
						</th>
						<th scope="col" class="px-6 py-3">
							Numéro de téléphone
						</th>
						<th scope="col" class="px-6 py-3">
							<div class="flex items-center">
								date
								<a href="#">
									<svg class="w-3 h-3 ml-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 24 24">
										<path d="M8.574 11.024h6.852a2.075 2.075 0 0 0 1.847-1.086 1.9 1.9 0 0 0-.11-1.986L13.736 2.9a2.122 2.122 0 0 0-3.472 0L6.837 7.952a1.9 1.9 0 0 0-.11 1.986 2.074 2.074 0 0 0 1.847 1.086Zm6.852 1.952H8.574a2.072 2.072 0 0 0-1.847 1.087 1.9 1.9 0 0 0 .11 1.985l3.426 5.05a2.123 2.123 0 0 0 3.472 0l3.427-5.05a1.9 1.9 0 0 0 .11-1.985 2.074 2.074 0 0 0-1.846-1.087Z"/>
									</svg>
								</a>
							</div>
						</th>
						<th scope="col" class="px-6 py-3">
							<div class="flex items-center">
								email
								<a href="#">
									<svg class="w-3 h-3 ml-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 24 24">
										<path d="M8.574 11.024h6.852a2.075 2.075 0 0 0 1.847-1.086 1.9 1.9 0 0 0-.11-1.986L13.736 2.9a2.122 2.122 0 0 0-3.472 0L6.837 7.952a1.9 1.9 0 0 0-.11 1.986 2.074 2.074 0 0 0 1.847 1.086Zm6.852 1.952H8.574a2.072 2.072 0 0 0-1.847 1.087 1.9 1.9 0 0 0 .11 1.985l3.426 5.05a2.123 2.123 0 0 0 3.472 0l3.427-5.05a1.9 1.9 0 0 0 .11-1.985 2.074 2.074 0 0 0-1.846-1.087Z"/>
									</svg>
								</a>
							</div>
						</th>
						<th scope="col" class="px-6 py-3">
							<div class="flex items-center">
								objet
								<a href="#">
									<svg class="w-3 h-3 ml-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 24 24">
										<path d="M8.574 11.024h6.852a2.075 2.075 0 0 0 1.847-1.086 1.9 1.9 0 0 0-.11-1.986L13.736 2.9a2.122 2.122 0 0 0-3.472 0L6.837 7.952a1.9 1.9 0 0 0-.11 1.986 2.074 2.074 0 0 0 1.847 1.086Zm6.852 1.952H8.574a2.072 2.072 0 0 0-1.847 1.087 1.9 1.9 0 0 0 .11 1.985l3.426 5.05a2.123 2.123 0 0 0 3.472 0l3.427-5.05a1.9 1.9 0 0 0 .11-1.985 2.074 2.074 0 0 0-1.846-1.087Z"/>
									</svg>
								</a>
							</div>
						</th>
						<th scope="col" class="px-6 py-3">
							Message
						</th>
						<th scope="col" class="px-6 py-3">
							<span class="sr-only">Supprimer</span>
						</th>
					</tr>
				</thead>
				<tbody>
					{% for contact in contacts %}

						<tr class="bg-white border-b max-h-8">
							<th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
								{{ contact.id }}
							</th>
							<td class="px-6 py-4">
								{{ contact.fullName }}
							</td>
							<td class="px-6 py-4">
								{{ contact.phoneNumber }}
							</td>
							<td class="px-6 py-4">
								{{ contact.createdAt }}
							</td>
							<td class="px-6 py-4">
								{{ contact.email }}
							</td>
							<td class="px-6 py-4 ">
								{{ contact.subject }}
							</td>
							<td class="px-6 py-4 ">
								<a href="{{ path('admin_contact_view', {id: contact.id}) }}" class="font-medium text-blue-500  hover:underline">Voir</a>
							</td>
							<td class="px-6 py-4 text-right">
								<a href="{{ path('admin_contact_delete', {id: contact.id}) }}" class="font-medium text-red-500  hover:underline">Supprimer</a>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</table>
		</div>
	{% endif %}
{% endblock %}
