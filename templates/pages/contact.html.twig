{% extends 'base.html.twig' %}
{% block meta_description %} 
Contactez-nous pour concrétiser vos projets de maçonnerie. Notre équipe experte est prête à répondre à vos questions et à vous fournir des devis personnalisés.
{% endblock %}

{% block title %}Contact
{% endblock %}

{% block body %}
	<section class="bg-beige_chaud_clair">
		<article class="p-8 max-w-screen-2xl m-auto">
			<h1 class="mb-8 text-center">Nous contacter</h1>
			<div class="flex flex-col gap-8 justify-around md:flex-row">
				<div class="bg-gris_ardoise_clair p-8 shadow-2xl rounded-2xl md:min-w-[calc((100%/2)-32px)] ">
					{{ form_start(form) }}
					<div class="relative z-0 w-full mb-6 group ">
						{{ form_label(form.fullName) }}
						{{ form_widget(form.fullName) }}
						<div class="text-red-500">
							{{ form_errors(form.fullName) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group ">
						{{ form_label(form.email) }}
						{{ form_widget(form.email) }}
						<div class="text-red-500">
							{{ form_errors(form.email) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_label(form.phoneNumber) }}
						{{ form_widget(form.phoneNumber) }}
						<div class="text-red-500">
							{{ form_errors(form.phoneNumber) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_label(form.subject) }}
						{{ form_widget(form.subject) }}
						<div class="text-red-500">
							{{ form_errors(form.subject) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_label(form.content) }}
						{{ form_widget(form.content) }}
						<div class="text-red-500">
							{{ form_errors(form.content) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_row(form.honeypot) }}
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_label(form.securityQuestion) }}
						{{ form_widget(form.securityQuestion) }}
						<div class="text-red-500">
							{{ form_errors(form.securityQuestion) }}
						</div>
					</div>
					<div class="relative z-0 w-full mb-6 group">
						{{ form_label(form.rgpd) }}
						{{ form_widget(form.rgpd) }}
						<div class="text-red-500">
							{{ form_errors(form.rgpd) }}
						</div>
					</div>
					<input value="Envoyer" id="submit-contact" class="mt-2 rounded border bg-beige_chaud p-4 uppercase hover:bg-gris_ardoise " type="submit"></input>
					{{ form_end(form) }}
				</div>
				<div class="relative w-full h-96 md:h-[570px]">
					<iframe class="shadow-2xl absolute top-0 left-0 w-full h-full" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d23095.589022063526!2d3.484987104537618!3d43.64923715336586!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12b15bf07f8202cf%3A0xe48199b753f93c49!2sSaint-Andr%C3%A9-de-Sangonis!5e0!3m2!1sfr!2sfr!4v1692106161381!5m2!1sfr!2sfr" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
				</div>
			</div>
		</article>
	</section>
{% endblock %}
